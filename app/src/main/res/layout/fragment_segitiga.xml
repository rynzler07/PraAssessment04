<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   tools:context=".segitigaFragment">

    <!-- TODO: Update blank fragment layout -->
    <EditText
            android:id="@+id/hintAlas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Alas"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
    />

    <EditText
            android:id="@+id/hintTinggi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Tinggi"
            app:layout_constraintTop_toBottomOf="@id/hintAlas"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
    />

    <Button
            android:id="@+id/btnHitungSegitiga"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hitung"
            app:layout_constraintTop_toBottomOf="@id/hintTinggi"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
    />

    <TextView
            android:id="@+id/tLuasS"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Luas = ..."
            app:layout_constraintTop_toBottomOf="@id/btnHitungSegitiga"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:textSize="25dp"
    />

    <TextView
            android:id="@+id/tKelilingS"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Keliling = ..."
            app:layout_constraintTop_toBottomOf="@id/tLuasS"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:textSize="25dp"
    />

    <Button
            android:id="@+id/btnShareSegitiga"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Share"
            app:layout_constraintTop_toBottomOf="@id/tKelilingS"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
    />

</androidx.constraintlayout.widget.ConstraintLayout>